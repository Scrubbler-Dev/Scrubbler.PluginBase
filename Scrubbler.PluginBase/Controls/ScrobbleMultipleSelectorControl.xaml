<UserControl
    x:Class="Scrubbler.Abstractions.Controls.ScrobbleMultipleSelectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Scrubbler.Abstractions.Controls"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="800">

    <Grid Padding="4">
        <!-- ===== Toolbar Buttons ===== -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button
                Content="Check All"
                Command="{Binding CheckAllCommand}"/>

            <Button
                Content="Uncheck All"
                Command="{Binding UncheckAllCommand}"/>

            <Button
                Content="Check Selected"
                Command="{Binding CheckSelectedCommand}"/>

            <Button
                Content="Uncheck Selected"
                Command="{Binding UncheckSelectedCommand}"/>

            <TextBlock VerticalAlignment="Center">
                <Run Text="Num to scrobble: " />
                <Run Text="{Binding ToScrobbleCount}" />
                <Run Text=" / " />
                <Run Text="{Binding MaxToScrobbleCount}" />
                <Run Text=" | Selected: " />
                <Run Text="{Binding SelectedCount}" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
